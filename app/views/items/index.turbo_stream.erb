<%= turbo_stream.append :items do %>
  <%= render @items, collection: @items %>
<% end %>


<% if @pagy.next.present? %>
  <%= turbo_stream.replace :pagination do %>
    <%= turbo_frame_tag :pagination, loading: :lazy, src: items_path(format: :turbo_stream, page: @pagy.next) %>
  <% end %>
<% end %>