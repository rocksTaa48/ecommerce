<% provide :main_item do %>
<% @items.each do |item| %>
<!-- Container for demo purpose -->
<div class="mb-6 lg:mb-0">
  <div class="relative block rounded-lg shadow-lg bg-white p-6">
    <div class="lg:flex flex-row items-center">
      <div class="grow-0 shrink-0 basis-auto w-full lg:w-5/12 lg:pr-6">
        <%= link_to item_path(item) do %>
          <%= image_tag "https://mdbootstrap.com/img/new/avatars/2.jpg" %>
        <% end %>
      </div>
      <div class="grow-0 shrink-0 basis-auto w-full lg:w-7/12">
        <h5 class="text-lg font-bold mb-2"><%= item.title %></h5>
        <p class="text-gray-500 mb-4">$<%= item.price %></p>
        <ul class="list-inside flex mx-auto justify-center lg:justify-start">
          <div class="flex items-center justify-center">
            <div class="inline-flex shadow-md hover:shadow-lg focus:shadow-lg">
              <button type="button" class="rounded-l inline-block px-6 py-2.5 bg-blue-500 text-white font-medium text-xs leading-tight uppercase hover:bg-blue-700 focus:bg-blue-700 focus:outline-none focus:ring-0 active:bg-blue-800 transition duration-150 ease-in-out">Add to cart</button>
              <button type="button" class=" rounded-r inline-block px-6 py-2.5 bg-blue-500 text-white font-medium text-xs leading-tight uppercase hover:bg-red-500 focus:bg-red-700 focus:outline-none focus:ring-0 active:bg-red-800 transition duration-150 ease-in-out">Buy it now</button>
            </div>
          </div>
        </ul>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>